<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.com.wasys.gn.motorista.widgets.CustomTextView
        android:id="@+id/textDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Valor Pedágio (R$)"
        android:textColor="@color/blue_list_view"
        android:paddingTop="15dp"
        android:textSize="20dp"
        app:custom_typeface="SourceSansPro-Regular.otf" />

    <EditText
        android:id="@+id/edt_pedagio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Valor Pedágio (R$)"
        android:background="@drawable/edittext_trecho"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_green_square"
            android:text="Confirmar"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>