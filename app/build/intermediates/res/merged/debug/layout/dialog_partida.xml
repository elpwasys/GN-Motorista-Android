<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.com.wasys.gn.motorista.widgets.CustomTextView
        android:id="@+id/textDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Informar kilometragem atual"
        android:textColor="@color/blue_list_view"
        android:paddingTop="15dp"
        android:textSize="20dp"
        app:custom_typeface="SourceSansPro-Regular.otf" />

    <EditText
        android:id="@+id/edt_km"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Insira a Kilometragem de partida"
        android:inputType="number"

        />

    <br.com.wasys.gn.motorista.widgets.CustomTextView
        android:id="@+id/txt_destino"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Local de Partida"
        android:textColor="@color/blue_list_view"
        android:paddingTop="15dp"
        android:textSize="20dp"
        app:custom_typeface="SourceSansPro-Regular.otf" />

    <AutoCompleteTextView
        android:id="@+id/edt_local_de_partida"
        android:drawableLeft="@drawable/icone_origem_azul"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Local de partida"
        />



    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_green_square"
            android:text="Confirmar"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>