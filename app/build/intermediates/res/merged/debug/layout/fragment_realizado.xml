<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding"
    android:background="@color/white"
    tools:context="br.com.wasys.gn.motorista.fragments.RealizadoFragment">
    <LinearLayout
        android:id="@+id/anterior_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:background="@color/servico_trecho"
        android:layout_marginBottom="@dimen/margin"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trechos_anteriores"
            android:layout_marginBottom="@dimen/margin"
            android:textAppearance="?android:textAppearanceMedium"/>
        <LinearLayout
            android:id="@+id/itens_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/mais_trecho_button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/mais_trechos"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="5dp"
        android:background="@drawable/selector_btn_green_pill"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/atual_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:background="@color/servico_trecho"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trecho_atual"
            android:layout_marginBottom="@dimen/margin"
            android:textAppearance="?android:textAppearanceMedium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#919499"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_radio_button_checked"/>
            <AutoCompleteTextView
                android:id="@+id/origen_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#919499"
                android:hint="@string/informar_destino"
                android:textColorHint="#919499"
                android:background="#00000000"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textAppearance="?android:textAppearanceSmall"/>
            <ImageView
                android:id="@+id/my_origem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#919499"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_my_location"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e3e2"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#919499"
                android:layout_gravity="center"
                android:src="@drawable/ic_place"/>
            <AutoCompleteTextView
                android:id="@+id/destino_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#919499"
                android:hint="@string/informar_destino"
                android:textColorHint="#919499"
                android:background="#00000000"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textAppearance="?android:textAppearanceSmall"/>
            <ImageView
                android:id="@+id/my_destino"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#919499"
                android:layout_gravity="center"
                android:src="@drawable/ic_my_location"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e3e2"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#919499"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_toll"/>
                <br.com.wasys.library.widget.MoneyEditText
                    android:id="@+id/pedagio_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="#919499"
                    android:hint="@string/pedagio"
                    android:textColorHint="#919499"
                    android:background="#00000000"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceSmall"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="#919499"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_park"/>
                <br.com.wasys.library.widget.MoneyEditText
                    android:id="@+id/estacionamento_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="#919499"
                    android:hint="@string/estacionamento"
                    android:textColorHint="#919499"
                    android:background="#00000000"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceSmall"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e3e2"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/concluir_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/concluir"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:background="@drawable/selector_btn_green_pill"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
