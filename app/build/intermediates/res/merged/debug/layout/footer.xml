<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorPrimary"
     >



    <RelativeLayout
        android:id="@+id/layout_dados_motorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <br.com.wasys.gn.motorista.widgets.CustomTextView
            android:id="@+id/txt_motorista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carregando..."
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white" />



        <br.com.wasys.gn.motorista.widgets.CustomTextView
            android:id="@+id/txt_carro"
            android:layout_below="@+id/txt_motorista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carregando..."
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/gray_menu" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trocar_carro"
        android:layout_toRightOf="@id/layout_dados_motorista"
        android:gravity="right"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_change_car"
            android:layout_width="105dp"
            android:layout_margin="5dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:text="Trocar Carro"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"/>

    </RelativeLayout>






</RelativeLayout>