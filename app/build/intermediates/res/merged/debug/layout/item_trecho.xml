<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.com.wasys.gn.motorista.widgets.CustomTextView
        android:id="@+id/txt_observacoes"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"

        android:text="Trecho"
        android:layout_marginLeft="10dp"
        android:textSize="16dp" />

    <AutoCompleteTextView
        android:id="@+id/txt_origem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#696d6f"
        android:hint="Origem"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_trecho"
        android:layout_marginBottom="10dp"
        />

    <AutoCompleteTextView
        android:id="@+id/txt_destino"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#696d6f"
        android:hint="Destino"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_trecho"
        />

    <TextView
        android:id="@+id/txt_distancia_calculada"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#696d6f"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:text=""

        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_pedagio"
            android:layout_width="70dp"
            android:layout_margin="5dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_btn_green_pill"
            android:text="Pedágio"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_estacionamento"
            android:layout_width="70dp"
            android:layout_toRightOf="@+id/btn_pedagio"

            android:layout_margin="5dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_btn_green_pill"
            android:text="Estacion."
            android:textColor="@android:color/white"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/btn_concluir"
            android:layout_width="80dp"
            android:layout_toRightOf="@+id/btn_location"
            android:layout_margin="5dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_btn_green_pill"
            android:text="Concluir"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btn_location"
            android:layout_toRightOf="@+id/btn_estacionamento"
            android:layout_width="90dp"
            android:layout_margin="5dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_btn_green_pill"
            android:text="Localização"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </RelativeLayout>



</LinearLayout>